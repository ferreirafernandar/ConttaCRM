@model SocioDTO

@{
    var addEdit = Model.Id == 0 ? "Adicionar" : "Editar";
    var listaDeFiliais = (List<SocioListDTO>)ViewBag.Filial;
}

<h1 class="page-title txt-color-blueDark">

    <!-- PAGE HEADER -->
    <i class="fa-fw fa fa-edit"></i>
    Sócio
    <span>
        >
        @addEdit
    </span>
</h1>

@Html.Partial("_Mensagens")

<div class="box-content">

    @using (Ajax.BeginForm("POSTEditar", "Socio", new AjaxOptions { UpdateTargetId = "page-content", InsertionMode = InsertionMode.Replace, HttpMethod = "Post", OnFailure = "OnFailure", OnSuccess = "OnSuccess" }, new { @class = "smart-form" }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.EntrevistaId)

        <fieldset>
            <legend>Sócio</legend>
            <div class="row">
                <section class="col col-6">
                    <label for="Nome" class="label obrigatorio">Nome</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Nome)
                    </label>
                    @Html.ValidationMessageFor(model => model.Nome)
                </section>
                <section class="col col-6">
                    <label for="DataNascimento" class="label obrigatorio">Data de Nascimento</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.DataNascimento, new { @class = "date" })
                    </label>
                    @Html.ValidationMessageFor(model => model.DataNascimento)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Rg" class="label obrigatorio">RG</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Rg, new { @class = "somentenumeros" })
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Rg)
                </section>
                <section class="col col-6">
                    <label for="OrgaoRG" class="label obrigatorio">Orgão Expeditor</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.OrgaoRG)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.OrgaoRG)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Cpf" class="label obrigatorio">CPF</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Cpf, new { @class = "cpf" })
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Cpf)
                </section>
                <section class="col col-6">
                    <label for="EstadoCivil" class="label obrigatorio">Estado Civil</label>
                    <label class="select">
                        @Html.EnumDropDownListFor(model => model.EstadoCivil)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.EstadoCivil)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="NomeMae" class="label obrigatorio">Nome da Mãe</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.NomeMae)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.NomeMae)
                </section>
                <section class="col col-6">
                    <label for="NomePai" class="label">Nome do Pai</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.NomePai)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.NomePai)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Cnh" class="label">CNH</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Cnh, new { @class = "somentenumeros" })
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Cnh)
                </section>
                <section class="col col-6">
                    <label for="Nacionalidade" class="label obrigatorio">Nacionalidade</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Nacionalidade)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Nacionalidade)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Naturalidade" class="label obrigatorio">Naturalidade</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Naturalidade)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Naturalidade)
                </section>
                <section class="col col-6">
                    <label for="Sexo" class="label obrigatorio">Sexo</label>
                    <label class="select">
                        @Html.EnumDropDownListFor(model => model.Sexo)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Sexo)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Telefone" class="label obrigatorio">Telefone</label>
                    <label class="input">
                        <i class="icon-append fa fa-phone"></i>
                        @Html.TextBoxFor(model => model.Telefone, new { @class = "telefone" })
                    </label>
                    @Html.ValidationMessageFor(model => model.Telefone)
                </section>
                <section class="col col-6">
                    <label for="Celular" class="label obrigatorio">Celular</label>
                    <label class="input">
                        <i class="icon-append fa fa-mobile"></i>
                        @Html.TextBoxFor(model => model.Celular, new { @class = "telefone" })
                    </label>
                    @Html.ValidationMessageFor(model => model.Celular)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Email" class="label obrigatorio">E-mail</label>
                    <label class="input">
                        <i class="icon-append fa fa-envelope"></i>
                        @Html.TextBoxFor(model => model.Email)
                    </label>
                    @Html.ValidationMessageFor(model => model.Email)
                </section>
                <section class="col col-6">
                    <label for="Participacao" class="label obrigatorio">Participação</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Participacao)
                    </label>
                    @Html.ValidationMessageFor(model => model.Participacao)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.Assina) Assina na receita
                        <i></i>
                    </label>
                </section>
                <section class="col col-6">
                    <label class="checkbox">
                        @Html.CheckBoxFor(model => model.Administrador) É administrador da empresa
                        <i></i>
                    </label>
                </section>
            </div>
        </fieldset>
        <fieldset>
            <legend>Endereço</legend>
            <div class="row">
                <section class="col col-6">
                    <label for="Rua" class="label obrigatorio">Rua</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Rua)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Rua)
                </section>
                <section class="col col-6">
                    <label for="Numero" class="label">Número</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Numero, new { @class = "somentenumeros" } )
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Numero)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Complemento" class="label">Complemento</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Complemento)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Complemento)
                </section>
                <section class="col col-6">
                    <label for="Bairro" class="label obrigatorio">Bairro</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Bairro)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Bairro)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Cidade" class="label obrigatorio">Cidade</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Cidade)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Cidade)
                </section>
                <section class="col col-6">
                    <label for="Cep" class="label">CEP</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Cep, new { @class = "cep" })
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Cep)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Referencia" class="label">Referência</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Referencia)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Referencia)
                </section>
                <section class="col col-6">
                    <label for="Estado" class="label obrigatorio">Estado</label>
                    <label class="select">
                        @Html.EnumDropDownListFor(model => model.Estado)
                        <i></i>
                    </label>
                    @Html.ValidationMessageFor(model => model.Estado)
                </section>
            </div>

        </fieldset>
        <footer>
            <button type="submit" class="btn btn-primary btn-submit" data-loading-text="Salvando..."><i class="fa fa-save"></i> Salvar</button>
            <a href="javascript:;" class="btn btn-default" onclick="carregarPaginaAjax('@Url.Action("Editar", "Entrevista", new { idEntrevista = @Model.EntrevistaId })')"><i class="fa fa-arrow-left"></i> Voltar</a>
        </footer>
    }

        </div>
<script src="@Url.Content("~/Scripts/views/socioEditar.js")" type="text/javascript"></script>


