@model ConfiguracaoServidorEmailDTO

<h1 class="page-title txt-color-blueDark">

    <!-- PAGE HEADER -->
    <i class="fa-fw fa fa-gear"></i>
    Configuração
    <span>
        >
        Editar
    </span>
</h1>

@Html.Partial("_Mensagens")

<div class="box-content">

    @using (Ajax.BeginForm("Index", "Configuracao", new AjaxOptions { UpdateTargetId = "page-content", InsertionMode = InsertionMode.Replace, HttpMethod = "Post", OnFailure = "OnFailure", OnSuccess = "OnSuccess" }, new { @class = "smart-form" }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>Configurações de e-mail</legend>
            <div class="row">
                <section class="col col-3">
                    <label for="UtilizarEnvioDeEmail" class="label">&nbsp;</label>
                    <label class="checkbox">
                        @Html.CheckBoxFor(c => c.UtilizarEnvioDeEmail, false) Utilizar Envio de Email
                        <i></i>
                    </label>
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Conta" class="label">Conta</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Conta)
                    </label>
                    @Html.ValidationMessageFor(model => model.Conta)
                </section>
                <section class="col col-6">
                    <label for="Senha" class="label">Senha</label>
                    <label class="input">
                        @Html.PasswordFor(model => model.Senha)
                    </label>
                    @Html.ValidationMessageFor(model => model.Senha)
                </section>
            </div>
            <div class="row">
                <section class="col col-6">
                    <label for="Smtp" class="label">SMTP</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Smtp)
                    </label>
                    @Html.ValidationMessageFor(model => model.Smtp)
                </section>
                <section class="col col-3">
                    <label for="Porta" class="label">Porta</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.Porta)
                    </label>
                    @Html.ValidationMessageFor(model => model.Porta)
                </section>
                <section class="col col-3">
                    <label for="Ssl" class="label">&nbsp;</label>
                    <label class="checkbox">
                        @Html.CheckBoxFor(c => c.Ssl, false) SSL
                        <i></i>
                    </label>
                </section>
            </div>
        </fieldset>
        <fieldset>
            <legend>Configurações do Sistema</legend>
            <div>
                <section>
                    <label for="PastaRaiz" class="label obrigatorio">Pasta Raiz</label>
                    <label class="input">
                        @Html.TextBoxFor(model => model.PastaRaiz)
                    </label>
                    @Html.ValidationMessageFor(model => model.PastaRaiz)
                </section>
            </div>
        </fieldset>
        <footer>
            <button type="submit" class="btn btn-primary btn-submit" data-loading-text="Salvando..."><i class="fa fa-save"></i> Salvar</button>
        </footer>
    }

</div>
<script src="@Url.Content("~/Scripts/views/configuracaoIndex.js")" type="text/javascript"></script>
