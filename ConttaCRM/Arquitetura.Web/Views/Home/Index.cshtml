@{
    ViewBag.Title = "Visão Web - Entrar";
    Layout = "~/Views/Shared/_LayoutAcesso.cshtml";
}

<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
    <div class="well no-padding">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "smart-form client-form", id = "login-form" }))
        {
            @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string)
            <header>
                Entrar
            </header>

            <fieldset>
                @if (ViewBag.Error != null)
                {
                    <p class="text-danger">@ViewBag.Error</p><br />
                }
                @if (ViewBag.AlertSuccess != null)
                {
                    <p class="text-success">@ViewBag.AlertSuccess</p><br />
                }
                <section>
                    <label class="label">Usuário</label>
                    <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        <input type="text" name="usuario" value="@ViewBag.Usuario">
                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Digite seu usuário</b>
                    </label>
                </section>

                <section>
                    <label class="label">Senha</label>
                    <label class="input">
                        <i class="icon-append fa fa-lock"></i>
                        <input type="password" name="senha">
                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Digite sua senha</b>
                    </label>
                    <div class="note">
                        <a href="@Url.Action("RecuperarSenha", "Home")">Esqueceu sua senha?</a>
                    </div>
                </section>
                @*
                    <section>
                        <label class="checkbox">
                            <input type="checkbox" name="continuarConectado" checked="">
                            <i></i>Continuar conectado
                        </label>
                    </section>
                *@
            </fieldset>
            <footer>
                <button type="submit" class="btn btn-primary">
                    Entrar
                </button>
            </footer>
        }
    </div>

    <h5 class="text-center"> - Ou entre usando -</h5>

    <ul class="list-inline text-center">
        <li>
            <a href="javascript:void(0);" class="btn btn-primary btn-circle"><i class="fa fa-facebook"></i></a>
        </li>
        <li>
            <a href="javascript:void(0);" class="btn btn-info btn-circle"><i class="fa fa-twitter"></i></a>
        </li>
        <li>
            <a href="javascript:void(0);" class="btn btn-warning btn-circle"><i class="fa fa-linkedin"></i></a>
        </li>
    </ul>

</div>

@section scripts {
    <script type="text/javascript">
        runAllForms();

        $(function () {
            // Validation
            $("#login-form").validate({
                // Rules for form validation
                rules: {
                    usuario: {
                        required: true
                    },
                    senha: {
                        required: true,
                        minlength: 3,
                        maxlength: 20
                    }
                },

                // Messages for form validation
                messages: {
                    usuario: {
                        required: 'Por favor informe seu usuário'
                    },
                    senha: {
                        required: 'Por favor informe sua senha'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        });
    </script>
}