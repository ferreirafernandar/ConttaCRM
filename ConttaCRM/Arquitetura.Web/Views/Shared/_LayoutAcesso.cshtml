@if (ControladorDeSessao.EstaAutenticado())
{
    <!DOCTYPE html>
    <html>
    <head>
        <title>Redirecionando...</title>
        <script type="text/javascript">
            window.location = "/Home/Inicio";
        </script>
    </head>
    <body>
        <div style="display:none">@RenderBody()</div>
        @RenderSection("scripts", required: false)
    </body>
</html>
}
else
{
    string coluna = ViewBag.EhRegistrar == true ? "7" : "8";
    <!DOCTYPE html>
    <html lang="en-us" id="extr-page">
    <head>
        <meta charset="utf-8">
        <title>Contta CRM</title>
        <meta name="description" content="">
        <meta name="author" content="Renan Streit">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <!-- #CSS Links -->
        <!-- Basic Styles -->
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/bootstrap.min.css")">
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/font-awesome.min.css")">

        <!-- SmartAdmin Styles : Caution! DO NOT change the order -->
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/smartadmin-production-plugins.min.css")">
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/smartadmin-production.min.css")">
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/smartadmin-skins.min.css")">

        <!-- SmartAdmin RTL Support -->
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/smartadmin-rtl.min.css")">

        <!-- We recommend you use "your_style.css" to override SmartAdmin
             specific styles this will also ensure you retrain your customization with each SmartAdmin update.-->
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/your_style.css")"> 
        <!-- Demo purpose only: goes with demo.js, you can delete this css when designing your own WebApp -->
        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/SmartAdmin/css/demo.min.css")">

        <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/Site.css")">

        <!-- #FAVICONS -->
        <link rel="icon" href="@Url.Content("~/Content/SmartAdmin/img/favicon/favicon.ico")" type="image/x-icon">
        <link rel="icon" href="@Url.Content("~/Content/SmartAdmin/img/favicon/favicon.ico")" type="image/x-icon">

        <!-- #GOOGLE FONT -->
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700">

        <!-- #APP SCREEN / ICONS -->
        <!-- Specifying a Webpage Icon for Web Clip
             Ref: https://developer.apple.com/library/ios/documentation/AppleApplications/Reference/SafariWebContent/ConfiguringWebApplications/ConfiguringWebApplications.html -->
        <link rel="apple-touch-icon" href="@Url.Content("~/Content/SmartAdmin/img/splash/sptouch-icon-iphone.png")">
        <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/Content/SmartAdmin/img/splash/touch-icon-ipad.png")">
        <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/Content/SmartAdmin/img/splash/touch-icon-iphone-retina.png")">
        <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/Content/SmartAdmin/img/splash/touch-icon-ipad-retina.png")">

        <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">

        <!-- Startup image for web apps -->
        <link rel="apple-touch-startup-image" href="@Url.Content("~/Content/SmartAdmin/img/splash/ipad-landscape.png")" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:landscape)">
        <link rel="apple-touch-startup-image" href="@Url.Content("~/Content/SmartAdmin/img/splash/ipad-portrait.png")" media="screen and (min-device-width: 481px) and (max-device-width: 1024px) and (orientation:portrait)">
        <link rel="apple-touch-startup-image" href="@Url.Content("~/Content/SmartAdmin/img/splash/iphone.png")" media="screen and (max-device-width: 320px)">

    </head>

    <body class="animated fadeInDown">

        <header id="header">

            <div id="logo-group">
                <span id="logo"> <img src="@Url.Content("~/Content/SmartAdmin/img/logo.png")" alt="Contta CRM"> </span>
            </div>
            @if (ViewBag.EhRegistrar == true)
            {
                <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Já tem um conta?</span> <a href="@Url.Action("Index", "Home")" class="btn btn-danger">Entrar</a> </span>
            }
            else
            {
                <span id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Precisa de uma conta?</span> <a href="@Url.Action("Registrar", "Home")" class="btn btn-danger btn-orange">Registrar</a> </span>
            }
        </header>

        <div id="main" role="main">

            <!-- MAIN CONTENT -->
            <div id="content" class="container">

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-@coluna hidden-xs hidden-sm">
                        <h1 class="txt-color-my-blue login-header-big">Contta CRM</h1>
                        <div class="hero">

                            <div class="pull-left login-desc-box-l">
                                <h4 class="paragraph-header">Um sistema integrado de gestão com foco no cliente.</h4>
                                <div class="login-app-icons">
                                    <a href="@Url.Action("Sobre", "Home")" class="btn btn-danger btn-sm btn-orange">Sobre</a>
                                    <a href="@Url.Action("Contato", "Home")" class="btn btn-danger btn-sm btn-orange">Contato</a>
                                </div>
                            </div>

                            <img src="@Url.Content("~/Content/SmartAdmin/img/demo/iphoneview.png")" class="pull-right display-image" alt="" style="width:210px;">

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <h5 class="about-heading">Sobre o Contta CRM</h5>
                                <p>
                                    Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa.
                                </p>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <h5 class="about-heading">Not just your average template!</h5>
                                <p>
                                    Et harum quidem rerum facilis est et expedita distinctio. Nam libero tempore, cum soluta nobis est eligendi voluptatem accusantium!
                                </p>
                            </div>
                        </div>

                    </div>
                    @RenderBody()
                </div>
            </div>

        </div>

        <!--================================================== -->
        <!-- PACE LOADER - turn this on if you want ajax loading to show (caution: uses lots of memory on iDevices)-->
        <script src="@Url.Content("~/Content/SmartAdmin/js/plugin/pace/pace.min.js")"></script>

        <!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script> if (!window.jQuery) { document.write('<script src="/Content/SmartAdmin/js/libs/jquery-2.1.1.min.js"><\/script>'); } </script>

        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
        <script> if (!window.jQuery.ui) { document.write('<script src="/Content/SmartAdmin/js/libs/jquery-ui-1.10.3.min.js"><\/script>'); } </script>

        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax-custom.js")" type="text/javascript"></script>

        <!-- IMPORTANT: APP CONFIG -->
        <script src="@Url.Content("~/Content/SmartAdmin/js/app.config.js")"></script>

        <!-- JS TOUCH : include this plugin for mobile drag / drop touch events
        <script src="js/plugin/jquery-touch/jquery.ui.touch-punch.min.js"></script> -->
        <!-- BOOTSTRAP JS -->
        <script src="@Url.Content("~/Content/SmartAdmin/js/bootstrap/bootstrap.min.js")"></script>

        <!-- JQUERY VALIDATE -->
        <script src="@Url.Content("~/Content/SmartAdmin/js/plugin/jquery-validate/jquery.validate.min.js")"></script>

        <!-- JQUERY MASKED INPUT -->
        <script src="@Url.Content("~/Scripts/jquery.maskMoney.js")" type="text/javascript"></script>
    
        <script src="@Url.Content("~/Content/SmartAdmin/js/plugin/masked-input/jquery.maskedinput.min.js")"></script>

        <!--[if IE 8]>

            <h1>Your browser is out of date, please update your browser by going to www.microsoft.com/download</h1>

        <![endif]-->
        <!-- MAIN APP JS FILE -->
        <script src="@Url.Content("~/Content/SmartAdmin/js/app.min.js")"></script>

        <script src="@Url.Content("~/Scripts/scripts.js")"></script>

        @RenderSection("scripts", false)

    </body>
</html>
}