@model Exception
@{
    if (Request.IsAjaxRequest())
    {

    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="row">

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <div class="row">
            <div class="col-sm-12">
                <div class="text-center error-box">
                    <h4><i class="fa fa-times-circle text-danger"></i> Não foi possível estabelecer uma conexão com o servidor.</h4><br />
                    <p class="semi-bold">
                        <small>
                            Por favor, aguarde alguns instantes e tente novamente.
                        </small>
                    </p>
                    @if (Util.IsDebugMode())
                    {
                        if (Model != null)
                        {
                            <p>Detalhes do erro:</p>
                            <p>@Model.Message</p>
                        }
                    }

                </div>

            </div>

        </div>

    </div>

</div>
<!-- end row -->